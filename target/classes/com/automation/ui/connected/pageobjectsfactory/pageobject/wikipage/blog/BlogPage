package com.uiautomation.connected.pageobjectsfactory.pageobject.wikipage.blog;

import com.uiautomation.connected.pageobjectsfactory.pageobject.article.ArticlePageObject;
import com.uiautomation.connected.pageobjectsfactory.pageobject.special.watch.WatchPageObject;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindBy;

public class BlogPage extends ArticlePageObject {

  private static final String BLOG_PAGE_FORMAT = "User_blog:%s/%s";
  @FindBy(css = ".page-header__title")
  private WebElement blogHeader;

  public BlogPage open(String userName, String postName) {
    getUrl(urlBuilder.getUrlForPage(String.format(BLOG_PAGE_FORMAT, userName, postName)));

    return this;
  }

  public WatchPageObject unfollowBlogPage() {
    String url = urlBuilder.appendQueryStringToURL(getCurrentUrl(), "action=unwatch");
    getUrl(url);
    return new WatchPageObject();
  }

  public String getBlogTitle() {
    //NEEDTOCHECK
    wait.forElementVisibleW(blogHeader);

    return blogHeader.getText();
  }

  public String getBlogName() {
    return blogHeader.getText();
  }
}
